[user]
    name = Michael Spoehr
[pull]
    ff = only
[core]
    editor = vim
    pager = diff-so-fancy | less --tabs=4 -RFX
    excludesfile = ~/.gitignore_global
[init]
    defaultBranch = main
[color "diff"]
    meta = 11
    commit = yellow bold
[github]
    user = mspoehr
[diff-so-fancy]
    markEmptyLines = false
[alias]
    amend = commit --amend --no-edit
    reword = commit --amend
    fp = fetch --all --prune
    unstage = restore --staged
    fpush = push --force-with-lease
    rpull = pull --rebase
    newpush = "!f() { \
                    REMOTE=origin; \
                    if [ $# -eq 1 ]; then \
                       REMOTE=$1; \
                    fi; \
                    git push --set-upstream $REMOTE $(git rev-parse --abbrev-ref HEAD); \
                }; f"
    fpushnow = !git add . && git amend && git push --force-with-lease
